{
  "name": "squizbox",
  "version": "1.0.0",
  "description": "playing with svelte.technology",
  "main": "index.js",
  "scripts": {
    "start": "npm run build:dev",
    "dist": "npm run build:dist",
    "build:dev": "webpack --env=dev --display-error-details --progress --profile --colors",
    "build:dist": "webpack --env=prod",
    "postbuild:dist": "npm run html",
    "serve": "serve -p 3333 ./",
    "selenium-start": "selenium-standalone start",
    "test": "npm run selenium-run",
    "selenium-install": "selenium-standalone install",
    "selenium-run": "node ./test/index.js",
    "webpack-serve": "webpack-dev-server",
    "prehtml": "cp ./src/template.html ./build/index.html",
    "html": "cd ./build/ && perl -pe 's/INCLUDEJS/`cat index.js`/ge' -i index.html"
  },
  "author": "Oliver Boermans <ollie@ollicle.com>",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "geckodriver": "^1.7.1",
    "http-server": "^0.10.0",
    "selenium-standalone": "^6.5.0",
    "serve": "^6.0.2",
    "svelte-cli": "^1.3.6",
    "svelte-loader": "^2.0.1",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "webdriverio": "^4.8.0",
    "webpack": "^2.5.0",
    "webpack-dev-server": "^2.5.1"
  }
}
